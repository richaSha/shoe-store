<div class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li>Brand List</li>
</div>
<div class="wrapper">
  <div class="edit">
    <button type="button" class="btn btn-info btn-xs add_button" data-toggle="modal" data-target="#myModal">
      <span class="glyphicon glyphicon-plus"></span>
    </button>
    <button type="button" class="btn btn-info btn-xs edit_button">
        <span class="glyphicon glyphicon-pencil"></span>
    </button>
    <button type="button" class="btn btn-info btn-xs delete">
      <span class="glyphicon glyphicon-trash"></span>
    </button>
  </div>
  <h1>List of Shoe Brand</h1>
  <% if @brands.any?() %>
    <ul>
      <% @brands.each do |brand|%>
        <div class="">
          <li class="store_list"><a href="brand/<%= brand.id %>"><%= brand.name %></a>
            <form class="" action="/brand/<%= brand.id %>" method="post">
              <input type="hidden" name="_method" value="delete">
              <button type="submit" class="delete_icon icon hide">
                <span class="glyphicon glyphicon-trash"></span>
              </button>
            </form>
            <button type="button" class="edit_icon icon hide">
                <span class="glyphicon glyphicon-pencil"></span>
            </button>
          </li>
          <form class="edit_store_list hide" action="/brand/edit/<%= brand.id %>" method="post">
            <input type="hidden" name="_method" value="patch">
            <input type="text" name="<%= brand.id %>" value="<%= brand.name %>">
            <button type="submit" name="button">Edit</button>
          </form>
        </div>
      <%end%>
    </ul>
  <%else%>
    <p class="no_list">Sorry! Currently No List Available</p>
    <p>Please Add Brand Name</p>
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add Brand</button>
  <%end%>
  <!-- Modal -->
  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add New Brand</h4>
        </div>
        <div class="modal-body">
          <form class="" action="/brand" method="post">
            <input type="text" name="name" placeholder="Brand Name">
            <br>
            <input type="text" name="price" placeholder="Price in dollar">
            <br>
            <button type="submit" name="button" >Add</button>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>
